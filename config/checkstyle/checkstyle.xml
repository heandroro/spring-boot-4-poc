<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
  Checkstyle configuration for spring-boot-4-poc
  Focus: Forbid fully qualified class names in code (prefer imports).
-->
<module name="Checker">
    <property name="severity" value="error"/>

    <!-- Optional: allow suppressions file if needed in future -->
    <!-- <module name="SuppressionFilter">
        <property name="file" value="config/checkstyle/suppressions.xml"/>
    </module> -->

    <!-- Disallow fully qualified class names in Java source lines (outside imports/packages) -->
    <!-- Matches patterns like com.example.Foo, org.acme.util.Bar$Baz, etc. -->
    <module name="RegexpSingleline">
        <property name="format" value="^(?!\s*(import|package)\b).*\b[a-z][\w]*?(?:\.[a-z_][\w]*)+\.[A-Z][\w$]*\b"/>
        <property name="message" value="Avoid fully qualified class names; add an import and use the simple name."/>
        <property name="fileExtensions" value="java"/>
            <!-- <property name="ignoreComments" value="true"/> -->
    </module>
</module>
